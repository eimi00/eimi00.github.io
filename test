    <!-- ğŸ“œ JavaScript ãƒ­ã‚¸ãƒƒã‚¯ -->
    <!-- ============================== -->
    <script>
        // 1. ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿å®Œäº†æ™‚ã®ãƒ­ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°ç”»é¢ã®ãƒ•ã‚§ãƒ¼ãƒ‰ã‚¢ã‚¦ãƒˆå‡¦ç†
        document.addEventListener('DOMContentLoaded', () => {
            const loadingOverlay = document.getElementById('loadingOverlay');

            // æ“¬ä¼¼çš„ã«ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã®èª­ã¿è¾¼ã¿é…å»¶ã‚’è¡¨ç¾ï¼ˆæœ€ä½1ç§’é–“ã¯è¡¨ç¤ºï¼‰
            setTimeout(() => {
                loadingOverlay.classList.add('loaded');
                // å®Œå…¨ã«ãƒ•ã‚§ãƒ¼ãƒ‰ã‚¢ã‚¦ãƒˆå¾Œã«è¦ç´ ã‚’éè¡¨ç¤ºï¼ˆä»»æ„ï¼‰
                setTimeout(() => {
                    loadingOverlay.style.display = 'none';
                }, 800);
            }, 1000);
        });

        // 2. ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³ (IntersectionObserver)
        const animateElements = document.querySelectorAll('[data-animate]');

        const observerOptions = {
            root: null, // ãƒ“ãƒ¥ãƒ¼ãƒãƒ¼ãƒˆã‚’ãƒ«ãƒ¼ãƒˆã¨ã™ã‚‹
            rootMargin: '0px 0px -10% 0px', // ç”»é¢ã®ä¸‹ã‹ã‚‰10%å…¥ã£ãŸã‚‰ç™ºç«
            threshold: 0 // é–¾å€¤
        };

        const observerCallback = (entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // è¦ç´ ãŒãƒ“ãƒ¥ãƒ¼ãƒãƒ¼ãƒˆã«å…¥ã£ãŸ
                    entry.target.classList.add('is-visible');
                    // ä¸€åº¦ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³ã—ãŸã‚‰ç›£è¦–ã‚’åœæ­¢
                    observer.unobserve(entry.target);
                }
            });
        };

        const observer = new IntersectionObserver(observerCallback, observerOptions);

        animateElements.forEach(el => {
            observer.observe(el);
        });

        // 3. ãƒšãƒ¼ã‚¸å†…ã‚¹ãƒ ãƒ¼ã‚ºã‚¹ã‚¯ãƒ­ãƒ¼ãƒ« (Index ãƒŠãƒ“ã‚²ãƒ¼ã‚·ãƒ§ãƒ³)
        document.querySelectorAll('.index-nav a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);

                // å°‘ã—ä¸Šï¼ˆHeader/Navé ˜åŸŸï¼‰ã«ä½™ç™½ã‚’æŒãŸã›ã¦ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«
                const offset = 80; // ã‚¹ãƒ ãƒ¼ã‚ºã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã®ã‚ªãƒ•ã‚»ãƒƒãƒˆå€¤
                // ã‚¹ãƒ ãƒ¼ã‚ºã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ãŒã‚¿ãƒ¼ã‚²ãƒƒãƒˆè¦ç´ ã‚’æ­£ç¢ºã«ãƒ“ãƒ¥ãƒ¼ãƒãƒ¼ãƒˆã®ãƒˆãƒƒãƒ—ã«æŒã£ã¦ãã‚‹ã‚ˆã†ã«èª¿æ•´
                const elementPosition = targetElement.getBoundingClientRect().top;
                const offsetPosition = elementPosition + window.scrollY - offset;

                window.scrollTo({
                    top: offsetPosition,
                    behavior: 'smooth'
                });
            });
        });
    </script>
